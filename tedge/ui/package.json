        "jest": "^28.1.3",
        "jest-preset-angular": "^12.2.5",
        "prettier": "^3.1.1",
        "typescript": "4.7.4"
    },
    "main": "src/main.ts",
    "c8y": {
        "application": {
            "name": "Thin Edge",
            "contextPath": "edge",
            "key": "application-application-key",
            "brandingEntry": "./branding/branding.less",
            "icon": {
                "url": "url(./branding/img/thin-edge-avatar.png)"
            },
            "copy": [
                {
                    "from": "./branding",
                    "to": "./branding"
                }
