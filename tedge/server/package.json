{
  "name": "tedge-management-server",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "start": "node app/server.js",
    "format": "prettier --write '**/*.js'",
    "build": "ncc build app/server.js -o build",
    "rename": "mv build/index.js build/server.js",
    "zip": "mkdir -p dist &&  npm-build-zip --name tedge-management-server --name_only true --source build/ --destination dist/",
    "release": "npm run build && npm run rename && npm run zip"
  },
  "dependencies": {
    "express": "^4.18.2",
    "fs-json-store": "^8.0.1",
    "http-proxy-middleware": "^2.0.6",
    "mongodb": "^6.3.0",
    "mqtt": "^5.3.4",
    "npm-build-zip": "^1.0.4",
    "socket.io": "^4.7.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "20.10.8",
    "@vercel/ncc": "^0.38.1",
    "prettier": "^3.2.1"
  }
}
