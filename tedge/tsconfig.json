{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es6",
    "module": "es2020",
    "paths": { "@angular/*": ["./node_modules/@angular/*"] },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom",
    ],
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
